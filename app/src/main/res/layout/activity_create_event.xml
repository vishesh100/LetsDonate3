<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEvent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Create an event"
                android:textSize="34dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/setdate_btn"
                android:layout_width="104dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="44dp"
                android:onClick="method_Setdate"
                android:text="Set Date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <TextView
                android:id="@+id/show_date"
                android:layout_width="217dp"
                android:layout_height="37dp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/setdate_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.018"
                app:layout_constraintStart_toEndOf="@+id/setdate_btn" />

            <Button
                android:id="@+id/settime_btn"
                android:layout_width="104dp"
                android:layout_height="45dp"
                android:layout_marginTop="28dp"
                android:onClick="Method_setTime"
                android:text="Set TIME"
                app:layout_constraintStart_toStartOf="@+id/setdate_btn"
                app:layout_constraintTop_toBottomOf="@+id/setdate_btn" />

            <TextView
                android:id="@+id/showtime"
                android:layout_width="217dp"
                android:layout_height="37dp"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/settime_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.018"
                app:layout_constraintStart_toEndOf="@+id/settime_btn" />

            <EditText
                android:id="@+id/location"
                android:layout_width="356dp"
                android:layout_height="120dp"
                android:layout_marginTop="68dp"
                android:ems="10"
                android:hint="Location"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/showtime" />

            <Button
                android:id="@+id/create_btn"
                android:layout_width="144dp"
                android:layout_height="51dp"
                android:layout_marginTop="52dp"
                android:onClick="create"
                android:text="create"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" 24 Hour Format"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/showtime"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="@+id/showtime"
                app:layout_constraintTop_toBottomOf="@+id/showtime" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>